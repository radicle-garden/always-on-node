*.{{ garden_domain }} {
  tls {
      dns cloudflare {env.CLOUDFLARE_API_TOKEN}
  }
  reverse_proxy unix//opt/radicle/{labels.2}/httpd.sock
}

{{ garden_domain }} {
  @webhook path /api/stripe/webhook
  handle @webhook {
    reverse_proxy http://localhost:3000
  }
  handle {
    basicauth * {
      {{ caddy_basic_auth_user }} {{ caddy_basic_auth_password }}
    }
    reverse_proxy http://localhost:3000
  }
}